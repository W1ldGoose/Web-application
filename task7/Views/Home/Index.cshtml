@model IEnumerable<Book>;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
</html>
<div class="text-center" style="height: 400px; width: 600px; border: 5px solid #59006f; background-image: linear-gradient(180deg, #4d84e5, #ddd 40%, #fc8cdf)">
    <h2>@ViewData["Title"]</h2>
    <div class="book-list">
        @Html.ActionLink("Metrica", "Metrica")
    </div>
    <div class="book-list">
        <table>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Label</th>
                <th>Language</th>
                <th>Year</th>
                <th>Author</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Label</td>
                    <td>@item.Language</td>
                    <td>@item.Year</td>
                    <td> @Html.ActionLink(item.Author.Name, "Show_author", new { item.Author.Id })</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", item)
                        @Html.ActionLink("Delete", "Delete", item)
                    </td>
                </tr>
            }
        </table>
        <br />
        <div class="book-list">
            @Html.ActionLink("Add New", "Create")
        </div>
    </div>
    
</div>